{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": ["es2018", "dom"],
    "paths": {
      "team": ["dist/team/team", "dist/team"],
      "@messages": ["projects/messages/src/index.ts"],
      "@navigation": ["projects/navigation/src/index.ts"],
      "@team": ["projects/team/src/public-api.ts"]
    }
  },
  "angularCompilerOptions": { "enableI18nLegacyMessageIdFormat": false }
}
